        android:id="@+id/team2"
        android:layout_width="165dp"
        android:layout_height="28dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/team2players"
        app:layout_constraintEnd_toEndOf="@+id/team2players"
        app:layout_constraintTop_toTopOf="@+id/spinTeam2"
        app:layout_constraintVertical_bias="0.0" />


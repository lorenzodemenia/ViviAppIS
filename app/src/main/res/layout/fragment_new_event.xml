<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newEventFragmant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.event.NewEventFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newEvent"
        android:layout_width="match_parent"
        android:layout_height="741dp"
        android:background="@color/giallocra"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/view2"
            android:layout_width="394dp"
            android:layout_height="378dp"

            android:background="@drawable/radius_blurred_white_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.809"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/newEvLuogo"
            android:layout_width="226dp"
            android:layout_height="52dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/radius_blurred_white_button"
            android:ems="10"
            android:gravity="center"
            android:hint="Luogo"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/newEvPublic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.332" />

        <Spinner
            android:id="@+id/newEvOra"
            android:layout_width="102dp"
            android:layout_height="38dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="532dp"
            android:background="@drawable/radius_blurred_white_button"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/newEvDate" />

        <Spinner
            android:id="@+id/newEvMin"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="532dp"
            android:background="@drawable/radius_blurred_white_button"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/newEvDate" />

        <TextView
            android:id="@+id/newEvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/newEvType"
            tools:layout_editor_absoluteX="150dp" />


        <Button
            android:id="@+id/newEvCont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Continua"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/newEvDesc"
            app:layout_constraintVertical_bias="0.238" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/newEvDate"
            android:layout_width="140dp"
            android:layout_height="38dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/radius_blurred_white_button"
            android:ems="10"
            android:gravity="center"
            android:hint="Data"
            android:inputType="date"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/newEvPublic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.029"
            app:layout_constraintStart_toStartOf="parent" />

        <Switch
            android:id="@+id/newEvPublic"
            android:layout_width="147dp"
            android:layout_height="52dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="460dp"
            android:background="@drawable/radius_blurred_white_button"
            android:checked="true"
            android:showText="false"
            android:text="@string/new_ev_pub"
            android:textColor="@color/black"
            android:textOff="Privato"
            android:textOn="Publico"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/newEvType"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/radius_lightblue_button"
            app:layout_constraintBottom_toTopOf="@+id/newEvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/newEvName"
            android:layout_width="409dp"
            android:layout_height="37dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/radius_blurred_white_button"
            android:ems="10"
            android:gravity="center"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/newEvDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/newEvDesc"
            android:layout_width="375dp"
            android:layout_height="354dp"

            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Descrizione"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"

            android:textColor="@color/black"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:layout_constraintVertical_bias="0.541" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
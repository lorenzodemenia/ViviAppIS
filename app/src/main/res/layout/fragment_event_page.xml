<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pageEventFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.event.EventPageFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pageEvent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewCreator"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/radius_yellow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewora" />

        <TextView
            android:id="@+id/pageEventProp"
            android:layout_width="97dp"
            android:layout_height="19dp"
            android:background="@drawable/radius_blurred_white_text"
            android:text="Creatore"
            app:layout_constraintBottom_toBottomOf="@+id/viewCreator"
            app:layout_constraintEnd_toEndOf="@+id/viewCreator"
            app:layout_constraintStart_toStartOf="@+id/viewCreator"
            app:layout_constraintTop_toTopOf="@+id/viewCreator" />

        <View
            android:id="@+id/viewora"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/radius_yellow"
            app:layout_constraintEnd_toStartOf="@+id/viewDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewdata" />

        <TextView
            android:id="@+id/pageEventHour"
            android:layout_width="101dp"
            android:layout_height="19dp"
            android:background="@drawable/radius_blurred_white_text"
            android:text="Ora"
            app:layout_constraintBottom_toBottomOf="@+id/viewora"
            app:layout_constraintEnd_toEndOf="@+id/viewora"
            app:layout_constraintStart_toStartOf="@+id/viewora"
            app:layout_constraintTop_toTopOf="@+id/viewora" />

        <View
            android:id="@+id/viewLuogo"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/radius_yellow"
            app:layout_constraintBottom_toTopOf="@+id/viewdata"
            app:layout_constraintEnd_toStartOf="@+id/viewDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewname" />

        <TextView
            android:id="@+id/pageEventLuogo"
            android:layout_width="101dp"
            android:layout_height="19dp"
            android:background="@drawable/radius_blurred_white_text"
            android:text="Luogo"
            app:layout_constraintBottom_toBottomOf="@+id/viewLuogo"
            app:layout_constraintEnd_toEndOf="@+id/viewLuogo"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="@+id/viewLuogo"
            app:layout_constraintTop_toTopOf="@+id/viewLuogo"
            app:layout_constraintVertical_bias="0.461" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pageEventPart"
            android:layout_width="413dp"
            android:layout_height="157dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="220dp"
            android:background="@drawable/radius_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/viewdata"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/radius_yellow"
            app:layout_constraintBottom_toTopOf="@+id/viewora"
            app:layout_constraintEnd_toStartOf="@+id/viewDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewLuogo" />

        <TextView
            android:id="@+id/pageEventData"
            android:layout_width="101dp"
            android:layout_height="19dp"
            android:background="@drawable/radius_blurred_white_text"
            android:text="Data"
            app:layout_constraintBottom_toBottomOf="@+id/viewdata"
            app:layout_constraintEnd_toEndOf="@+id/viewdata"
            app:layout_constraintStart_toStartOf="@+id/viewdata"
            app:layout_constraintTop_toTopOf="@+id/viewdata" />

        <View
            android:id="@+id/viewname"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/radius_yellow"
            app:layout_constraintEnd_toStartOf="@+id/viewDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pageEventNm"
            android:layout_width="102dp"
            android:layout_height="22dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/radius_blurred_white_text"
            android:text="Nome"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/viewname"
            app:layout_constraintEnd_toEndOf="@+id/viewname"
            app:layout_constraintStart_toStartOf="@+id/viewname"
            app:layout_constraintTop_toTopOf="@+id/viewname" />

        <View
            android:id="@+id/viewDescription"
            android:layout_width="260dp"
            android:layout_height="168dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/radius_yellow"
            app:layout_constraintBottom_toTopOf="@+id/pageEventPart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/pageEventDesc"
            android:layout_width="225dp"
            android:layout_height="134dp"
            android:background="@drawable/radius_blurred_white"
            android:text="description"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/viewDescription"
            app:layout_constraintEnd_toEndOf="@+id/viewDescription"
            app:layout_constraintStart_toStartOf="@+id/viewDescription"
            app:layout_constraintTop_toTopOf="@+id/viewDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pageEventUser"
            android:layout_width="135dp"
            android:layout_height="99dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pageEventPart"
            app:layout_constraintVertical_bias="0.472">

            <Button
                android:id="@+id/pageEventIscr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iscriviti"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pageEventAdmin"
            android:layout_width="366dp"
            android:layout_height="78dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pageEventPart"
            app:layout_constraintVertical_bias="0.727">

            <Button
                android:id="@+id/pageEventStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avvia evento"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.428"
                app:layout_constraintStart_toEndOf="@+id/pageEventCanc"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

            <Button
                android:id="@+id/pageEventCanc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Cancella evento"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.533" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/creatorTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="5dp"
            android:text="Creato da:"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            app:layout_constraintBottom_toTopOf="@+id/viewCreator"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/partecipantTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="25dp"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:text="Partecipanti:"
            app:layout_constraintBottom_toTopOf="@+id/pageEventPart"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>